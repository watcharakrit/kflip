  style(type='text/css', media='screen').
    html {
    height: 100%;
    }
    body {
    padding: 0;
    margin: 0;
    height: 100%;
    -moz-osx-font-smoothing: grayscale;
    -webkit-font-smoothing: antialiased;
    font-smoothing: antialiased;
    background-color: #222;
    }
    #main {
    height: 100%;
    }
    #page-1 {
    background-color: pink;
    }
